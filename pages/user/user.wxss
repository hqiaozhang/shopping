/* pages/user/user.wxss */ 
 
/* 用户基本信息 */
.userinfo {
  background: #2f323b;
  height: 215rpx;
  border-radius: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  box-shadow: 0 0rpx  10rpx 0rpx;
  position: relative;
}
.userinfo_avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
} 
.userinfo_nickname {
  color: #fff;
}
 .userinfo_accounts {
   width: 100%;
   color: #fff;
 }
 .setting {
   color: #fff;
   position: absolute;
   right: 20rpx;
   top: 20rpx; 
 }
 .setting image{
   width: 50rpx;
   height: 50rpx;
 }
 /* 我的功能 */
 .my_function {
   margin: 40rpx;
   width: 100%;
 }

 .my_function image {
   width: 60rpx;
   height: 60rpx;
   margin-bottom: 20rpx;
 }

.my_function .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 30%;
  float: left;
  font-size: 36rpx;
}
.title_h3 {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
/* 猜你喜欢 */
.you_like,
.commodity_list {
  width: 100%; 
}
.commodity_list {
  display: flex;
}
.commodity_list .item {
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  float: left;
}
.commodity_list .item:nth-child(2n){
  margin-left: 40rpx;
}
.commodity_list .item image {
  width: 100%; 
  height: 230rpx;
}
.commodity_list button {
  background: #2f323b;
  height: 70rpx;
  line-height: 70rpx;
  border: none;
  color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}